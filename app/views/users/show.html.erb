<div class"row">
	<div class="col-sm-10 col-sm-offset-1">
		<h1>Welcome <%= @user.name %></h1>
		<div class="row">
			<div class="col-sm-4">
				<form action='/secrets' method='post'>
					<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
					<div class="form-group">
						<label for='content'>New Secret</label>
						<input type='text' id='content' class="form-control" name='content'>
					</div>
					<button type='submit' id="createSecret" class="btn btn-default" value='Create Secret'>Create Secret</button>
				</form>
			</div>
		</div>
		<div class="row">
			<% @secrets.each do |secret| %>
			<div class="col-sm-4">
				<div class="panel panel-default">
				  <div class="panel-body">
					<p><%= secret.content %>
					<p><%= secret.likes.count %> likes</p>
					<form action="/secrets/<%= secret.id %>" method="post">
						<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
						<input type='hidden' name='_method' value='delete'>
						<button type='submit' class="btn btn-default" value='Delete'>Delete</button>
					</form>
				  </div>
				</div>
			</div>
			<% end %>
		</div>
		<a href="/secrets"><button class="btn btn-default">All Secrets</button></a>
		<a href="/users/<%= @user.id %>/edit"><button class="btn btn-default">Edit Profile</button></a>
	</div>
</div>